<% include partials/header.ejs %>

<form action="/users/<%= user._id %>?_method=PUT" method="POST">
	<div>
		<label>Name</label>
		<input type="text" name="user[name]" value="<%= user.name %>" required>
	</div>

	<div>
		<label>Email</label>
		<input type="email" name="user[email]" value="<%= user.email %>" required>
	</div>

	<button type="submit" class="btn btn-outline-secondary">Save edit</button>
</form>

